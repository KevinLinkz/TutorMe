<layer-list xmlns:android="http://schemas.android.com/apk/res/android">


    <item>
        <shape android:shape="rectangle">
            <corners android:radius="20dp" />
            <gradient
                android:angle="180"
                android:endColor="#3093E6"
                android:startColor="#053E7A" />
            <size
                android:width="300dp"
                android:height="150dp" />
            <stroke
                android:color="#429EE7"
                android:width="3dp"/>

        </shape>
    </item>

    <item android:bottom="100dp">
        <shape android:shape="rectangle">
            <corners
                android:topLeftRadius="20dp"
                android:topRightRadius="20dp" />
            <stroke
                android:color="#429EE7"
                android:width="3dp"/>
            <gradient
                android:angle="180"
                android:endColor="#3093E6"
                android:startColor="#053E7A" />
        </shape>
    </item>


</layer-list>