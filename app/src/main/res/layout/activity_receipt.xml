<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.Receipt">
    <TextView
        android:id="@+id/lbl1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Receipt"
        android:textSize="24dp"
        android:textStyle="bold"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="5dp"
        />

    <View
        android:layout_below="@+id/lbl1"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="#429EE7" />


    <TextView
        android:id="@+id/lbl2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Type Tutor = "
        android:textSize="18dp"
        android:layout_below="@+id/lbl1"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="10dp"/>
    <TextView
        android:id="@+id/lbl3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Subject       = "
        android:textSize="18dp"
        android:layout_below="@+id/lbl2"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:id="@+id/lbl4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Repeat        = "
        android:textSize="18dp"
        android:layout_below="@+id/lbl3"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:id="@+id/lbl5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Price           = "
        android:textSize="18dp"
        android:layout_below="@+id/lbl4"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="10dp"/>


    <TextView
        android:id="@+id/lbl6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Date            = "
        android:textSize="18dp"
        android:layout_below="@+id/lbl5"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="10dp"/>


    <TextView
        android:id="@+id/lbl7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Time           = "
        android:textSize="18dp"
        android:layout_below="@+id/lbl6"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:id="@+id/lbl8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Location     = "
        android:textSize="18dp"
        android:layout_below="@+id/lbl7"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:id="@+id/lbl9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Total           = "
        android:textSize="18dp"
        android:textStyle="bold"
        android:layout_below="@+id/lbl8"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="10dp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnPay"
        style="@style/Widget.MaterialComponents.Button"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="25dp"
        android:layout_below="@+id/lbl9"
        android:gravity="center"
        android:text="Pay"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Button"
        android:textColor="@android:color/black"
        android:textSize="12dp"
        app:backgroundTint="@android:color/holo_green_light" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnCancel"
        style="@style/Widget.MaterialComponents.Button"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/btnPay"
        android:layout_below="@+id/lbl9"
        android:gravity="center"
        android:text="Cancel"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Button"
        android:textColor="@android:color/black"
        android:textSize="12dp"
        app:backgroundTint="@android:color/holo_blue_light" />




</RelativeLayout>