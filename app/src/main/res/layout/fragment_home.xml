<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragment.Home">

    <SearchView
        android:id="@+id/srcHome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/style_search"
        android:iconifiedByDefault="false"
        android:queryHint="Search Me :)" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/srcHome"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/crd_wallet"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_margin="10dp"
                android:background="@android:color/transparent"
                app:cardCornerRadius="20dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/box"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/bca_wallet"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:src="@mipmap/im_wallet" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignParentRight="true"
                            android:layout_marginTop="12dp"
                            android:layout_marginRight="10dp"
                            android:text="Rp.10.000,00"
                            android:textColor="#ffffff"
                            android:textSize="18dp"
                            android:textStyle="bold" />
                    </RelativeLayout>


                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:weightSum="3">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                            <!--                    <View-->
                            <!--                        android:layout_width="3dp"-->
                            <!--                        android:layout_height="match_parent"-->
                            <!--                        android:layout_alignParentRight="true"-->
                            <!--                        android:background="#429EE7" />-->

                            <ImageView
                                android:id="@+id/wallet_transfer"
                                android:layout_width="50dp"
                                android:layout_height="40dp"
                                android:layout_centerInParent="true"
                                android:src="@drawable/ic_wallet_transfer" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/wallet_transfer"
                                android:layout_centerInParent="true"
                                android:text="Transfer"
                                android:textColor="#ffffff"
                                android:textSize="15dp"
                                android:textStyle="bold" />


                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                            <!--                    <View-->
                            <!--                        android:layout_width="3dp"-->
                            <!--                        android:layout_height="match_parent"-->
                            <!--                        android:layout_alignParentRight="true"-->
                            <!--                        android:background="#429EE7" />-->
                            <ImageView
                                android:id="@+id/wallet_top_up"
                                android:layout_width="50dp"
                                android:layout_height="40dp"
                                android:layout_centerInParent="true"
                                android:src="@drawable/ic_wallet_top_up" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/wallet_top_up"
                                android:layout_centerInParent="true"
                                android:text="Top-Up"
                                android:textColor="#ffffff"
                                android:textSize="15dp"
                                android:textStyle="bold" />


                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                            <ImageView
                                android:id="@+id/wallet_point"
                                android:layout_width="50dp"
                                android:layout_height="40dp"
                                android:layout_centerInParent="true"
                                android:src="@drawable/ic_account_wallet" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/wallet_point"
                                android:layout_centerInParent="true"
                                android:text="Point"
                                android:textColor="#ffffff"
                                android:textSize="15dp"
                                android:textStyle="bold" />


                        </RelativeLayout>


                    </TableRow>


                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/crd_schedule"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_below="@id/crd_wallet"
                android:layout_margin="10dp"
                app:cardCornerRadius="20dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/lbl_schedule"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:text="Schedule"
                        android:textSize="16dp" />

                    <TextView
                        android:id="@+id/lbl_subject"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/lbl_schedule"
                        android:layout_marginLeft="10dp"
                        android:text="Korean with Minho"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/lbl_subject_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/lbl_subject"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="0dp"
                        android:text="2-4 PM"
                        android:textSize="18dp"

                        />

                    <Button
                        android:id="@+id/btn_attendance"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="20dp"
                        android:background="@android:color/holo_green_dark"
                        android:text="Attendance"
                        android:textAlignment="center"

                        />

                    <Button
                        android:id="@+id/btn_reschedule"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/btn_attendance"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="20dp"
                        android:background="@android:color/holo_red_dark"
                        android:text="Reschedule"

                        android:textAlignment="center" />

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <com.synnapps.carouselview.CarouselView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_below="@id/crd_schedule"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">


            </com.synnapps.carouselview.CarouselView>


        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
